<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Pixelmechanics\ExportOrder\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Pixelmechanics\ExportOrder\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">LogHandler</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Pixelmechanics\ExportOrder\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    
    <!--
        @ink https://trello.com/c/68IXDl4E/61-order-export-bei-paypal-manchmal-ohne-items
        @see https://trello.com/c/ds9h7Vo1/34-za-api-anbindung-navision-navision-entwicklung-teil-2a-import-produkt-qty
    -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="exportOrder" xsi:type="object">Pixelmechanics\ExportOrder\Console\exportOrder</item>
            </argument>
        </arguments>
    </type>
    
</config>