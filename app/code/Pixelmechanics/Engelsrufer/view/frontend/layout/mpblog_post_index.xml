 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.content" htmlTag="div" htmlClass="blog-container container" />
        <referenceBlock name="sale.reorder.sidebar" remove="true"/>
        <referenceContainer name="page.main.title" htmlTag="div" htmlClass="blog-title" />
        <referenceContainer name="page.top">
            <container name="blog.banner" label="Blog banner Container" htmlTag="div" htmlClass="blog banner-container" before="breadcrumbs">
                <block class="Magento\Cms\Block\Block" name="blog-banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">blog-banner</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="blog_category" template="Pixelmechanics_Engelsrufer::blog/blogCatgeories.phtml" before="mpblog.post.list"/>
        </referenceContainer>
        <referenceContainer name="footer-container">
            <container name="blog.bottom" label="Blog bottom Container" htmlTag="div" htmlClass="statics-block-wrap bot-wrap" before="-">
                <block class="Magento\Cms\Block\Block" name="blog-static-footer">
                    <arguments>
                        <argument name="block_id" xsi:type="string">bottom-static-banners</argument>
                    </arguments>
                </block> 
            </container>
        </referenceContainer>
    </body>
</page>

