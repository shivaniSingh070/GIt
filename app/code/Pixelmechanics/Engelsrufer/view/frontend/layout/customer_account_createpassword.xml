<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
         <!-- Added container class in main.content -->  
        <referenceContainer name="main.content" htmlTag="div" htmlClass="createpassword-container container" />
        <move element="page.main.title" destination="customer.account.banner" after="-"/>
        <referenceContainer name="page.top">
            <container name="customer.account.banner" label="Customer account banner Container" htmlTag="div" htmlClass="accountBanner banner-container" after="-">
                <block class="Magento\Cms\Block\Block" name="login-banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">account-banner</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
