<?xml version="1.0"?>
<!--
/**
 * Register page xml, set elements as per design
 * Updated by AA 29.04.2019.
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
       <!-- noved page title in banner container --> 
        <move element="page.main.title" destination="customer.account.banner" after="-"/>
       <!-- Added page banner above breadcrumbs -->
        <referenceContainer name="page.top">
            <container name="customer.account.banner" label="Customer account banner Container" htmlTag="div" htmlClass="accountBanner banner-container" before="breadcrumbs">
                    <block class="Magento\Cms\Block\Block" name="login-banner">
                        <arguments>
                            <argument name="block_id" xsi:type="string">account-banner</argument>
                        </arguments>
                    </block>
            </container>
        </referenceContainer>
       <!--  Added breadcrumbs in register page -->
         <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Account</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Account</item>
                    <item name="label" xsi:type="string">Account</item>
                </argument>
            </action>
        </referenceBlock>
      <!-- added container and class to wrap content -->
        <referenceContainer name="content" htmlTag="div" htmlClass="register-container container" />



    </body>
</page>
