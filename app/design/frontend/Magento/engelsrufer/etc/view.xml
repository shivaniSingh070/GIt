<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
    
        <images module="Magento_Catalog">
          <!-- set the width and height of gallery images -->
            <image id="product_page_image_small" type="thumbnail">
                <width>218</width>
                <height>218</height>
            </image>
            <image id="wishlist_sidebar_block" type="thumbnail">
		        <width>208</width>
		        <height>208</height>	
	        </image> 
            <image id="category_page_grid" type="small_image">
                <width>173</width>
                <height>173</height>
            </image>
            <image id="category_page_list" type="small_image">
                <width>173</width>
                <height>173</height>
            </image>
            <image id="wishlist_thumbnail" type="small_image">
                <width>230</width>
                <height>230</height>
            </image>
            <image id="recently_viewed_products_grid_content_widget" type="small_image">
                <width>174</width>
                <height>174</height>
            </image>
            <image id="new_products_content_widget_grid" type="small_image">
                <width>240</width>
                <height>240</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <!-- Gallery and magnifier theme settings. Enabled zoom -->
        <var name="magnifier">
            <var name="fullscreenzoom">20</var>  <!-- Zoom for fullscreen (integer)-->
            <var name="top"></var> <!-- Top position of magnifier -->
            <var name="left"></var> <!-- Left position of magnifier -->
            <var name="width"></var> <!-- Width of magnifier block -->
            <var name="height"></var> <!-- Height of magnifier block -->
            <var name="eventType">hover</var> <!-- Action that atcivates zoom (hover/click) -->
            <var name="enabled">true</var> <!-- Turn on/off magnifier (true/false) -->
        </var>
    </vars>
    <vars module="Magento_ConfigurableProduct">
        <var name="gallery_switch_strategy">prepend</var>
    </vars> 
    <vars module="Magento_PageBuilder">
        <var name="breakpoints">
            <var name="desktop">
                <var name="conditions">
                    <var name="min-width">1100px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">4</var>
                        </var>
                    </var>
                </var>
            </var>   
            <var name="tablet">
                <var name="conditions">
                    <var name="max-width">1099px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">3</var>
                        </var>
                    </var>
                </var>
            </var> 
            <var name="mobile-small">
                <var name="conditions">
                    <var name="max-width">680px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">2</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="mobile-tiny">
                <var name="conditions">
                    <var name="max-width">450px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">1</var>
                        </var>
                    </var>
                </var>
            </var>        
        </var>
    </vars>
</view>
