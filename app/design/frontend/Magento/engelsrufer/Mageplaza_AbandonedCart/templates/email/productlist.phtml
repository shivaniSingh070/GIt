$itemCollection = $block->getProductCollection();
?>

<table class="email-items">
    <thead>
    <tr>
        <th class="item-info"><?= /* @noEscape */ __('Image') ?></th>
        <th class="item-info"><?= /* @noEscape */ __('Product Name') ?></th>
        <th class="item-qty"><?= /* @noEscape */ __('Qty') ?></th>
        <th class="item-price"><?= /* @noEscape */ __('Price') ?></th>
    </tr>
    </thead>
    <tbody>
    <?php if (!count($itemCollection)) : ?>
        <tr>
            <td class="item-info">
                <span class="product-image">
                    <img src="<?= $block->escapeUrl($block->getPlaceholderImage()) ?>" alt="test"/>
                </span>
            </td>
            <td class="item-info">
                <p class="product-name"><?= /* @noEscape */  __('Test product') ?></p>
            </td>
            <td class="item-qty">
                <span class="product-qty">0</span>
            </td>
       <?php /* Removed escapeHtml to remove span from email template updated by AA on 14.06.2019  */ ?>     
            <td class="item-price">
                <span class="product-price"><?= $block->getSubtotal() ?></span>
            </td>
        </tr>
    <?php else : ?>
        <?php foreach ($itemCollection as $_item) : ?>
            <tr>
                <td class="item-info">
                    <span class="product-image">
                        <?php 
                        /*
                         * Resolved image issue in outlook
                         * Outlook don't support pixel so removed px from width and height
                         * updated by AA on 13.11.2019
                         * https://trello.com/c/twhF5xrd/137-08abandoned-cart-e-mail-versand-abandoned-cart-mail-sendout#comment-5dcbc9accc18f25abd555a9a
                         */
                        ?>
                        <img src="<?= $block->escapeUrl($block->getProductImage($_item)) ?>"
                             alt="<?= $block->escapeHtml($_item->getName()) ?>" width="100" height="100"/>
                    </span>
                </td>
                <td class="item-info">
                    <p class="product-name">
                        <a href="<?= $block->escapeUrl($_item->getProduct()->getProductUrl()) ?>" target="_blank">
                            <?= $block->escapeHtml($_item->getName()) ?>
                        </a>
                    </p>
                </td>
                <td class="item-qty">
                    <span class="product-qty"><?= (int) $_item->getQty() ?></span>
                </td>
         <?php /* Removed escapeHtml to remove span from email template updated by AA on 14.06.2019  */ ?>  
                <td class="item-price">
                    <span class="product-price"><?= $block->getProductPrice($_item) ?></span>
                </td>
            </tr>
        <?php endforeach; ?>
    <?php endif; ?>
    </tbody>
    <tfoot class="order-totals">
    <?php if (!$block->getTaxConfig()->displayCartSubtotalInclTax()) : ?>
        <tr class="last-item">
            <th colspan="3" scope="row"><?= /* @noEscape */ __('Order Total Excl. Tax') ?></th>
        <?php /* Removed escapeHtml to remove span from email template updated by AA on 14.06.2019  */ ?>  
            <td><?= $block->getSubtotal() ?></td>
        </tr>
    <?php endif; ?>
    <?php if (!$block->getTaxConfig()->displayCartSubtotalExclTax()) : ?>
        <tr class="last-item">
            <th colspan="3" scope="row"><?= /* @noEscape */ __('Order Total Incl. Tax') ?></th>
       <?php /* Removed escapeHtml to remove span from email template updated by AA on 14.06.2019  */ ?>  
            <td><?= $block->getSubtotal(true) ?></td>
        </tr>
    <?php endif; ?>
